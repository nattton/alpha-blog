<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200  %>

<% if logged_in? and @user == current_user %>
<div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
</div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>

<%= will_paginate @articles, class: "flickr_pagination" %>

<%= render "articles/articles", articles: @articles %>

<%= will_paginate @articles, class: "flickr_pagination mb-4" %>